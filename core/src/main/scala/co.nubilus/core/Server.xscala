package co.nubilus
package core

import akka.actor._
import com.typesafe.config.ConfigFactory

trait Server {
	val version : Version  //Version("platform:core",BuildInfo.version)
	val system = digestConfig()

	private[roots] var health:HealthStatus.Value = HealthStatus.OK

	def digestConfig( a:Actor ) = {
		val cfg      = ConfigFactory.load
		val system   = ActorSystem( cfg.getString("cluster-name"), cfg )
		system
	}
}
